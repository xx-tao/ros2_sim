<launch>
  <gz_server
    world_sdf_file="$(find-pkg-share robot_sim2)/models/double_pendulum_model.sdf"
    use_composition="True"
    create_own_container="True" />
  <ros_gz_bridge
    bridge_name="ros_gz_bridge"
    config_file="$(find-pkg-share robot_sim2)/config/tf_bridge.yaml"
    use_composition="True" />
  <node pkg="rviz2" exec="rviz2" args="-d $(find-pkg-share robot_sim2)/rviz/tf_bridge.rviz" />
  <executable cmd="gz sim -g" />
</launch>
